<%= form_for @message do |f|%>

	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :name %>
	<%= f.text_field :name, placeholder: "e.g., John from Nice People, Inc"%>

	<%= f.label :email %>
	<%= f.email_field :email, placeholder: "e.g., john@nice-people.com"%>
	
	<%= f.label :content %>
	<%= f.text_area :content, placeholder: "Your message here." %>
	
	<%= f.label :checkbox, "If you're human, leave this box unchecked!", id: "message_checkbox" %>
	<%= f.check_box :checkbox%>

	<%= f.submit "Send!", class: "btn btn-large"%>
	<!-- message is passed as a local variable -->

<% end %>